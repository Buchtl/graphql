type Query {
    productById(id: ID): Product
}

type Mutation {
    createProduct(name: String, product_no: [Int]): Product
}

type Subscription {
    productAdded: Product
}

subscription {
    productAdded {
        id
    }
}

type Product {
    id: ID!
    name: String
    product_no: [Int]
    manufacturer: Manufacturer
}

type Manufacturer {
    id: ID!
    name: String
}